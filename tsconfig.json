{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "lib": ["es2019"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "scripts",
    "jest",
    "jest.config.js",
    "dotenv"
  ],
  "types": ["typePatches"]
}
